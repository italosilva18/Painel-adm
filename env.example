# API Configuration
# Backend API base URL
VITE_API_BASE_URL=http://localhost:5001

# Request timeout in milliseconds (default: 30000)
VITE_API_TIMEOUT=30000

# Number of retry attempts for failed requests (default: 3)
VITE_API_RETRY_ATTEMPTS=3

# JWT and Session Configuration
# Local storage key for JWT token
VITE_JWT_STORAGE_KEY=margem_admin_token

# Session timeout in milliseconds (24 hours = 86400000)
VITE_SESSION_TIMEOUT=86400000

# JWT Secret (must match backend)
# This is used for token validation on client side (reference only)
VITE_JWT_SECRET=#$100&&CLIENTES%%PAGANTES#

# Application Configuration
# Application name
VITE_APP_NAME=MARGEM Admin Panel

# Environment
VITE_ENV=development

# Enable debug logging
VITE_DEBUG=true

# Production API Configuration (uncomment for production)
# VITE_API_BASE_URL=https://api.mpmsuite.com.br
# VITE_ENV=production
# VITE_DEBUG=false
